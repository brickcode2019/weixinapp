/* components/consult/consult.wxss */
.db{
  display: block;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.clerafix{
  display: table;/* 触发bfc,让div具有包裹性*/
}
.clerafix:before,.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.container {
  background-color: #fff;
  width: 100%;
  height: 100vh;
}
.consultBox{
  width: 100%;
  box-sizing: border-box;
  padding: 0 12%;
}
.form-box {
  width: 100%;
  box-sizing: border-box;
  padding: 20px 0;
}
.iconBox{
  padding: 40rpx 0 40rpx;
}
.consultIcon{
  width: 84rpx;
  height: 84rpx;
  margin: 0 auto;
}
.consult{
  font-size: 42rpx;
  color: #000;
  line-height: 42rpx;
  text-align: center;
  margin-top: 26rpx;
}
.row-wrap {
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  margin: 0 auto;
  display: flex;
  font-size: 24rpx;
}
.row-big{
  margin-top: 60rpx;
}
.row-wrap .label-right {
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
}
.row-wrap .label-right input {
  height: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #26AAF5;
  padding-left: 60rpx;
  border-radius: 40rpx;
}
.placeholder{
  color: #B0B0B0;
}
.codeBox{
  position: relative;
}
.codeInput{
  width: 56%;
}
.phoneCodeInput{
  width: 100%;
}
.button{
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  height: 46rpx;
  background: #0E62C8;
  border: none;
  color: #fff;
  font-size: 28rpx;
  line-height: 46rpx;
  border-radius: 22rpx;
  z-index: 10;
}
.agreement{
  color: #0E62C8;
}
.saveBox{
  width: 100%;
  height: 68rpx;
}
.save-btn{
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 30rpx;
  color: #fff;
  background: #F8B056;
  border-radius: 34rpx;
}