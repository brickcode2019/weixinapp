/* components/searchBox/searchBox.wxss */
/* 初始化样式 */
page {
  font-family: -apple-system-font, 'Microsoft YaHei', 'Helvetica Neue', Helvetica, sans-serif;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.db{
  display: block;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.clerafix{
  display: table;/* 触发bfc,让div具有包裹性*/
}
.clerafix:before,.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
/* searchBox样式 */
.searchBox{
  width: 100%;
  height: 60rpx;
  position: absolute;
  left: 0;
  top: 18rpx;
  z-index: 999;
}
.search{
  width: 690rpx;
  margin: 0 auto;
  height: 60rpx;
  border-radius: 30rpx;
  background: #f7f7f7;
}
.searchInput{
  width: 550rpx;
  height: 60rpx;
  color: #999999;
  padding: 0;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-left: 60rpx;
  border: none;
}
.phcolor{
  color: #999999;
}
.lineShu{
  height: 30rpx;
  width: 2rpx;
  background: #999999;
  margin-top: 16rpx;
}
.searchIcon{
  width: 32rpx;
  height: 33rpx;
  margin-top: 14rpx;
  margin-right: 28rpx;
}