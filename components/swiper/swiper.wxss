/* components/swiper/swiper.wxss */

/* 初始化样式 */
page{
  font-family: -apple-system-font, 'Microsoft YaHei', 'Helvetica Neue', Helvetica, sans-serif;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.db{
  display: block;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.clerafix{
  display: table; /* 触发bfc,让div具有包裹性*/
}
.clerafix:before, .clearfix:after{
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
/* swiper样式 */
.recommend{
  position: relative;
  overflow: hidden;
  height: 360rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  z-index: 2;
}
.swiperList{
  width: 100%;
  height: 100%;
}
.swiperBox{
  position: absolute;
}
/*图片位置*/
.recommend3{
  top: 100rpx;
  left: 20rpx;
  z-index: 3;
  height: 300rpx;
}
.recommend4{
  top: 50rpx;
  left: 125rpx;
  z-index: 4;
  height: 350rpx;
}
.recommend5{
  top: 100rpx;
  left: 430rpx;
  z-index: 3;
  height: 300rpx;
}
/*图片明暗*/
.recommend3{
  opacity: 0.7;
}
.recommend4{
  opacity: 1;
}
.recommend5{
  opacity: 0.7;
}
/*图片width*/
.recommend3 .imageBox image{
  width: 300rpx;
}
.recommend4 .imageBox image{
  width: 500rpx;
}
.recommend5 .imageBox image{
  width: 300rpx;
}
/*箭头部分*/
.btn{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 160rpx;
  z-index: 30;
  opacity: 0.7;
  filter: alpha(opacity=70);
}
.btn image{
  width: 80rpx;
  height: 80rpx;
  display: block;
}
.prev{
  left: 60rpx;
}
.next{
  right: 60rpx;
}
/*标题部分*/
.infoBox{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.title{
  font-size: 24rpx;
}
.info{
  font-size: 18rpx;
}