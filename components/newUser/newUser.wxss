/* components/newUser/newUser.wxss */
.db{
  display: block;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.clerafix{
  display: table;/* 触发bfc,让div具有包裹性*/
}
.clerafix:before,.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.container {
  background-color: #f5f5f9;
  justify-content: initial;
}
.newUser{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
}
.form-box {
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
  box-shadow: #B9D2E5 0 0 50rpx;
}
.row-wrap {
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  margin: 0 auto;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.row-wrap .label-right {
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
}
.row-wrap .label-right input {
  font-size: 28rpx;
  line-height: 86rpx;
  height: 66rpx;
  border-radius: 34rpx;
  border: 1rpx solid #26AAF5;
  padding-left: 20rpx;
}
.codeInput{
  width: 100%;
  font-size: 28rpx;
  line-height: 66rpx;
}
.nameInput{
  width: 40%;
  font-size: 28rpx;
  line-height: 66rpx;
}
.pickBox{
  width: 50%;
  font-size: 28rpx;
  line-height: 68rpx;
  border: 1rpx solid #26AAF5;
  border-radius: 34rpx;
  padding-left: 30rpx;
  color: #949494;
}
.phoneCodeBox{
  width: 54%;
  position: relative;
}
.button{
  position: absolute;
  right: 0;
  top: 10rpx;
  height: 46rpx;
  background: #26AAF5;
  border: none;
  color: #fff;
  font-size: 22rpx;
  line-height: 46rpx;
  border-radius: 22rpx;
  z-index: 10;
}
.saveBtn{
  width: 40%;
  background: #F8B056;
  color: #fff;
  font-size: 28rpx;
  line-height: 68rpx;
  border-radius: 34rpx;
  border: none;
}
.agreement{
  color: #26AAF5;
}
.save-btn{
  width: 60%;
  color: #fff;
  font-size: 28rpx;
  line-height: 68rpx;
  background: #FB6B3F;
  border: 1rpx solid #FB6B3F;
}