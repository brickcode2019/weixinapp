/* pages/login/login.wxss */
.container {
  background-color: #fff;
  width: 100%;
  height: 100vh;
  background: url(https://edu-mini-pro.oss-cn-hangzhou.aliyuncs.com/beike/login_bg.jpg);
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: top;
}
.loginBox{
  width: 100%;
  box-sizing: border-box;
  padding: 280rpx 12% 0;
}
.logoBox{
  width: 100%;
  height: 50rpx;
  text-align: center;
  position: relative;
}
.logo{
  width: 260rpx;
  height: auto;
  position: absolute;
  left: 0;
  top: 0;
}
.title{
  font-size: 40rpx;
  text-align: center;
  line-height: 50rpx;
  color: #ffffff;
}
.form-box {
  width: 100%;
  box-sizing: border-box;
  padding: 20px 0;
}
.row-wrap {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  display: flex;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}
.row-wrap .label-right {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
}
.row-wrap .label-right input {
  height: 100%;
  font-size: 28rpx;
  border: node;
  box-sizing: border-box;
  padding-left: 60rpx;
  border-radius: 40rpx;
  background: rgba(0, 0, 0, .06);
}
.placeholder{
  color: #ffffff;
}
.input{
  color: #ffffff;
}
.codeBox{
  position: relative;
}
.codeInput{
  width: 56%;
}
.phoneCodeInput{
  width: 56%;
}
.button{
  position: absolute;
  right: 0;
  top: 0;
  width: 40%;
  height: 80rpx;
  background: #fab14c;
  border: none;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
}
.agreement{
  color: #26AAF5;
}
.canvas{
  position: absolute;
  left: 60%;
  top: 0;
  width: 40%;
  height: 80rpx;
}
.save-btn{
  width: 100%;
  color: #275ec8;
  font-size: 32rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  background: #fab14c;
  border: none;
  margin-top: 60rpx;
}